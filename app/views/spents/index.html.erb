<%- model_class = Spent -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:value) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:person_id) %></th>
      <th><%= model_class.human_attribute_name(:expense_id) %></th>
      <th><%= model_class.human_attribute_name(:category_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @spents.each do |spent| %>
      <tr>
        <td><%= link_to spent.id, spent_path(spent) %></td>
        <td><%= spent.value %></td>
        <td><%= spent.date %></td>
        <td><%= spent.person_description %></td>
        <td><%= spent.expense_description %></td>
        <td><%= spent.category_description %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      spent_path(spent), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_spent_path(spent), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      spent_path(spent),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_spent_path,
            :class => 'btn btn-primary' %>
            <div class="text-center"><%= will_paginate(renderer: BootstrapPagination::Rails) %></div>

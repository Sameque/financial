<%- model_class = Spent -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:number) %>:</strong></dt>
  <dd><%= @spent.number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:value) %>:</strong></dt>
  <dd><%= @spent.value %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @spent.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @spent.date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:person_id) %>:</strong></dt>
  <dd><%= @spent.person_description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:category_id) %>:</strong></dt>
  <dd><%= @spent.category_description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payment_id) %>:</strong></dt>
  <dd><%= @spent.payment_description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:expense_id) %>:</strong></dt>
  <dd><%= @spent.expense_description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:closed) %>:</strong></dt>
  <dd><%= @spent.closed %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              spents_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_spent_path(@spent), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              spent_path(@spent),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<%= link_to t('.clone', :default => t("helpers.links.clone")),
              spents_clone_path(@spent.id),
              :method => 'get',
               :class => 'btn btn-primary' %>

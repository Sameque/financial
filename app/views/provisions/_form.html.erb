<%= form_for @provision, :html => { :class => "form-horizontal provision" } do |f| %>

  <% if @provision.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@provision.errors.count, "error") %> prohibited this provision from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @provision.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :category_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select(:category_id, @categories, :id, :name, {include_blank: true},{:class=>'form-control'}) %>
    </div>
    <%=f.error_span(:category_id) %>
  </div>

  <div class="form-group">
    <%= f.label :value, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :value, :class => 'form-control' %>
    </div>
    <%=f.error_span(:value) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                provisions_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>

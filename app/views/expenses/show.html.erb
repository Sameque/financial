<%- model_class = Expense -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="row">
  <div class="col-lg-4">

    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:number) %>:</strong></dt>
      <dd><%= @expense.number %></dd>
      <dt><strong><%= model_class.human_attribute_name(:competence) %>:</strong></dt>
      <dd><%= @expense.competence %></dd>
      <dt><strong><%= model_class.human_attribute_name(:person_id) %>:</strong></dt>
      <dd><%= @expense.person_id %></dd>
      <dt><strong><%= model_class.human_attribute_name(:paid) %>:</strong></dt>
      <dd><%= @expense.paid %></dd>
      <dt><strong><%= model_class.human_attribute_name(:value) %>:</strong></dt>
      <dd><%= @expense.value %></dd>
      <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
      <dd><%= @expense.description %></dd>
    </dl>

    <%= link_to t('.back', :default => t("helpers.links.back")),
                  expenses_path, :class => 'btn btn-default'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_expense_path(@expense), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  expense_path(@expense),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
 </div>
 <div class="col-lg-8">
   <%- model_spent = Spent -%>
   <table class="table table-striped">
     <thead>
       <tr>
         <th><%= model_spent.human_attribute_name(:id) %></th>
         <th><%= model_spent.human_attribute_name(:date) %></th>
         <th><%= model_spent.human_attribute_name(:person_id) %></th>
         <th><%= model_spent.human_attribute_name(:value) %></th>
         <th><%= model_spent.human_attribute_name(:category_id) %></th>
       </tr>
     </thead>
     <tbody>
       <% @spents.each do |spent| %>
         <tr>
           <td><%= link_to spent.id, spent_path(spent) %></td>
           <td><%= spent.date %></td>
           <td><%= spent.person_description %></td>
           <td><%= spent.value %></td>
           <td><%= spent.category_description %></td>
         </tr>
       <% end %>
     </tbody>
   </table>
   <%= link_to t('.new', :default => t("helpers.links.new")),
               new_spent_path,
               :class => 'btn btn-primary' %>
  </div>
</div>

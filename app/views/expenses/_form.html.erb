<%= form_for @expense, :html => { :class => "form-horizontal expense" } do |f| %>

  <% if @expense.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @expense.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:number) %>
  </div>
  <div class="form-group">
    <%= f.label :competence, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.date_select :competence, order: [:month, :year], :class => 'form-control' %>
    </div>
    <%=f.error_span(:competence) %>
  </div>
  <div class="form-group">
    <%= f.label :person_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select(:person_id, @people, :id, :name, {include_blank: true},{:class=>'form-control'}) %>
    </div>
    <%=f.error_span(:person_id) %>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label :paid, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.check_box :paid, :class => 'form-check-input' %>
    </div>
    <%=f.error_span(:paid) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                expenses_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
